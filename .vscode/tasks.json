// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": [
				{
					"owner": "typescript",
					"pattern": [
						{
							"regexp": "^(.*)",
							"file": 1
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^\s*\d{1,2}:\d{1,2}:\d{1,2}(?: AM| PM)? - File change detected\. Starting compilation\.\.\.",
						"endsPattern": "^\s*\d{1,2}:\d{1,2}:\d{1,2}(?: AM| PM)? - Compilation complete\. Watching for file changes\."
					}
				}
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
